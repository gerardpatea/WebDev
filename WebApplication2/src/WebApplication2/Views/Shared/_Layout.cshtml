<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Test Website - @ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div id="sidebar">
        <img src="~/img/sirena_top_can_noshadow.png" alt="apa elegi" class="headshot" />
        <span id="username">Apa Elegi</span>
        <ul class="menu">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>
    </div>
    <div id="wrapper">
        <div id="main">
            <div>
                <button id="sidebarToggle">Toggle Menu</button>
            </div>

            <div>
                @RenderBody()
            </div>

        </div>
        <div id="footer">
            Gerard Inc. &copy;
        </div>
    </div>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/site.js"></script>
</body>
</html>